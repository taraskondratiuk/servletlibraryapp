<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>accountController</servlet-name>
    <servlet-class>ua.gladiator.controller.AccountsController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>accountController</servlet-name>
    <url-pattern>/lib/login</url-pattern>
    <url-pattern>/lib/register</url-pattern>
    <url-pattern>/</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>takesController</servlet-name>
    <servlet-class>ua.gladiator.controller.TakesController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>takesController</servlet-name>
    <url-pattern>/lib/admin/takes</url-pattern>
    <url-pattern>/lib/user/takes</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>booksController</servlet-name>
    <servlet-class>ua.gladiator.controller.BooksController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>booksController</servlet-name>
    <url-pattern>/lib/admin/books</url-pattern>
    <url-pattern>/lib/user/books</url-pattern>
  </servlet-mapping>


 




</web-app>
